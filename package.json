{
  "name": "plant-disease-detection",
  "version": "1.0.0",
  "description": "Plant Disease Detection using Deep Learning",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "train": "cd backend && python -m app.train",
    "deploy": "bash deploy.sh",
    "deploy:win": "deploy.bat",
    "deploy:railway": "cd backend && railway up",
    "deploy:vercel": "cd frontend && vercel --prod",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && python -m pytest",
    "test:frontend": "cd frontend && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "plant-disease",
    "deep-learning",
    "computer-vision",
    "pytorch",
    "react",
    "fastapi"
  ],
  "author": "Plant Disease Detection Team",
  "license": "MIT"
}
